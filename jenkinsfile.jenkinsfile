pipeline {
    agent any
    stages {
        stage ('Source code') {
            steps{
                sh 'rm -Rf *'
                sh 'git clone  https://github.com/alilefe/terraform.git'
            }
        }
        stage('Init') {
            steps {
                sh 'echo Inicializando terraform...'
                
               
              
                 azureCLI commands: [[exportVariablesString: '', script: '']], principalCredentialId: 'jenkins_azure'
                 dir("$WORKSPACE/terraform"){
                    sh 'pwd'
                    sh 'terraform init -get=true' 
                    sh 'terraform plan -out test.out'
                    sh 'terraform apply -auto-approve -input=test.out'
                
                }
            }
        }
        
    }
}
